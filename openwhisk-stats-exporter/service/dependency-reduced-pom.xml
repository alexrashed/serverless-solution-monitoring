<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.wso2.serverless</groupId>
  <artifactId>openwhisk-stats-exporter</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <finalName>openwhisk-stats-exporter</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.5.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <mainClass>org.wso2.serverless.stats.OpenwhiskStatsExporter</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <org.json.version>20180130</org.json.version>
    <gson.version>2.8.5</gson.version>
    <prometheus.version>0.4.0</prometheus.version>
    <commons.logging.version>1.1.1</commons.logging.version>
    <args4j.version>2.33</args4j.version>
    <httpclient.version>4.5.6</httpclient.version>
    <kafka.steams.version>0.11.0.1</kafka.steams.version>
  </properties>
</project>
